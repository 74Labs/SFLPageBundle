{% extends 'SFLPageBundle::layout.html.twig' %}

{% block content %}
{{ form_start(form, {attr: {id: 'page-form'}}) }}

<div class="row">
<div class="col-lg-6 col-md-6 col-sm-6">
{{ form_row(form.url) }}
</div>
<div class="col-lg-6 col-md-6 col-sm-6">
{{ form_row(form.layout) }}
</div>
</div>

<div class="row">
<div class="col-lg-11 col-md-11 col-sm-11">
{{ form_row(form.title) }}
</div>
<div class="col-lg-1 col-md-1 col-sm-1">
{{ form_row(form.published) }}
</div>
</div>

<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12">
{{ form_row(form.content) }}
</div>
</div>

<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12">
<button id="save_btn" class="btn btn-primary pull-right" type="submit" name="submit"><i class="icon-save"></i>&nbsp;Save</button>
</div>

{{ form_end(form) }}
{% endblock %}